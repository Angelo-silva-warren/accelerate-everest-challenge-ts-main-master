{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "rootDir": ".",
    "baseUrl": "./src",
    "paths": {
      "@di/*":["di/*"],
      "@domain/*":["domain/*"],
      "@interface/*":["interface/*"],
      "@middleware/*":["middleware/*"],
      "@presentation/*":["presentation/*"],
      "@util/*":["util/*"]
    },
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
